<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<!-- The main content view -->
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="in.medialabasia.itra.doctorlocator.MapsActivity" />
<!-- The navigation drawer -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/filter_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#fafafa">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:onClick="ApplyFilters"
                />
            <Button
                android:layout_gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Reset"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/filters">
        <CheckBox
            android:id="@+id/specialization1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cardiology"/>
        <CheckBox
            android:id="@+id/specialization2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paediatrics"/>
        <CheckBox
            android:id="@+id/specialization3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hematology"/>
        </LinearLayout>
    </LinearLayout>
